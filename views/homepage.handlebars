{{#each blogs as |blog| }}
<div class="row mb-4 blog">
    <div class="col-md-5">
        <h2>
            <a href="/blog/{{blog.id}}">{{blog.title}}</a>
        </h2>
    </div>
    <div class="col-md-7">
        <h4>
            {{blog.content}}
        </h4>
    </div>
    <div>
        <p>Created by {{blog.user.name}}</p>
    </div>
</div>
{{/each}}